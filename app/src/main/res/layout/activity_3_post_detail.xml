    <ImageButton
        android:id="@+id/delete_post"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_delete_black_filled"
        android:visibility="invisible"/>
